{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Constituencies Schema",
  "description": "Schema for electoral constituency data",
  "items": {
    "type": "object",
    "required": ["constituency_name", "constituency_id", "state_id"],
    "properties": {
      "constituency_name": {
        "type": "string",
        "description": "Official name of the constituency",
        "minLength": 1,
        "maxLength": 200
      },
      "constituency_id": {
        "type": "string",
        "description": "Unique identifier for the constituency",
        "pattern": "^[A-Z]{2}-\\d+$"
      },
      "state_id": {
        "type": "string",
        "description": "State identifier code",
        "pattern": "^[A-Z]{2}$",
        "minLength": 2,
        "maxLength": 2
      }
    },
    "additionalProperties": false
  }
}
