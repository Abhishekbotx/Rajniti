{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Elections Schema",
  "description": "Schema for election metadata and results",
  "items": {
    "type": "object",
    "required": ["election_id", "name", "type", "year", "state_id"],
    "properties": {
      "election_id": {
        "type": "string",
        "description": "Unique identifier for the election",
        "pattern": "^[A-Z]{2}-\\d{4}-(ASSEMBLY|LOKSABHA)$"
      },
      "name": {
        "type": "string",
        "description": "Official name of the election",
        "minLength": 1,
        "maxLength": 200
      },
      "type": {
        "type": "string",
        "description": "Type of election",
        "enum": ["VIDHANSABHA", "LOKSABHA"]
      },
      "year": {
        "type": "integer",
        "description": "Election year",
        "minimum": 1947,
        "maximum": 2100
      },
      "date": {
        "type": "string",
        "description": "Election date",
        "format": "date"
      },
      "state_id": {
        "type": "string",
        "description": "State identifier",
        "pattern": "^[A-Z]{2}$"
      },
      "state_name": {
        "type": "string",
        "description": "Full state name"
      },
      "total_constituencies": {
        "type": "integer",
        "description": "Total number of constituencies",
        "minimum": 1
      },
      "total_candidates": {
        "type": "integer",
        "description": "Total number of candidates",
        "minimum": 1
      },
      "total_parties": {
        "type": "integer",
        "description": "Total number of parties",
        "minimum": 1
      },
      "voter_turnout": {
        "type": ["number", "null"],
        "description": "Voter turnout percentage",
        "minimum": 0,
        "maximum": 100
      },
      "result_status": {
        "type": "string",
        "description": "Status of election results",
        "enum": ["DECLARED", "PENDING", "COUNTING", "CANCELLED"]
      },
      "result_date": {
        "type": "string",
        "description": "Date when results were declared",
        "format": "date"
      },
      "winning_party": {
        "type": "string",
        "description": "Party that won the most seats"
      },
      "winning_party_seats": {
        "type": "integer",
        "description": "Number of seats won by winning party",
        "minimum": 0
      },
      "runner_up_party": {
        "type": "string",
        "description": "Second place party"
      },
      "runner_up_seats": {
        "type": "integer", 
        "description": "Number of seats won by runner up party",
        "minimum": 0
      }
    },
    "additionalProperties": false
  }
}
