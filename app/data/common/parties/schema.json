{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Political Parties Schema",
  "description": "Schema for political party data from Election Commission",
  "items": {
    "type": "object",
    "required": ["party_name", "symbol", "total_seats"],
    "properties": {
      "party_name": {
        "type": "string",
        "description": "Official name of the political party",
        "minLength": 1,
        "maxLength": 200
      },
      "symbol": {
        "type": "string", 
        "description": "Official election symbol/abbreviation",
        "minLength": 1,
        "maxLength": 50
      },
      "total_seats": {
        "type": "integer",
        "description": "Total number of seats won by the party",
        "minimum": 0
      }
    },
    "additionalProperties": false
  }
}
