{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Candidates Schema",
  "description": "Schema for election candidate data with results",
  "items": {
    "type": "object",
    "required": ["Constituency Code", "Name", "Party", "Status"],
    "properties": {
      "Constituency Code": {
        "type": "string",
        "description": "Constituency identifier where candidate contested",
        "pattern": "^[A-Z]{2}-\\d+$"
      },
      "Name": {
        "type": "string",
        "description": "Full name of the candidate",
        "minLength": 1,
        "maxLength": 200
      },
      "Party": {
        "type": "string",
        "description": "Political party affiliation",
        "minLength": 1,
        "maxLength": 200
      },
      "Status": {
        "type": "string",
        "description": "Election result status",
        "enum": ["WON", "LOST", "NOTA"]
      },
      "Votes": {
        "type": "string",
        "description": "Number of votes received (as string with possible formatting)",
        "pattern": "^\\d+$"
      },
      "Margin": {
        "type": "string",
        "description": "Victory margin or vote difference",
        "pattern": "^[\\d\\+\\(\\)]+$"
      },
      "Image URL": {
        "type": "string",
        "description": "URL to candidate's photo",
        "format": "uri"
      }
    },
    "additionalProperties": false
  }
}
