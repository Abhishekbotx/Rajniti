{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "States Schema",
  "description": "Schema for Indian states and union territories data",
  "items": {
    "type": "object",
    "required": ["state_id", "name", "type"],
    "properties": {
      "state_id": {
        "type": "string",
        "description": "Two-letter state identifier code",
        "pattern": "^[A-Z]{2}$"
      },
      "name": {
        "type": "string",
        "description": "Official name of the state/UT",
        "minLength": 1,
        "maxLength": 100
      },
      "type": {
        "type": "string",
        "description": "Administrative type",
        "enum": ["State", "Union Territory"]
      },
      "capital": {
        "type": "string",
        "description": "Capital city name"
      },
      "assembly_constituencies": {
        "type": "integer",
        "description": "Number of assembly constituencies",
        "minimum": 1
      },
      "lok_sabha_constituencies": {
        "type": "integer",
        "description": "Number of Lok Sabha constituencies",
        "minimum": 1
      },
      "current_cm": {
        "type": ["string", "null"],
        "description": "Current Chief Minister name"
      },
      "current_ruling_party": {
        "type": "string",
        "description": "Currently ruling political party"
      },
      "last_election": {
        "type": "string",
        "description": "Date of last assembly election",
        "format": "date"
      },
      "next_election": {
        "type": "string",
        "description": "Expected date of next election (YYYY-MM format)"
      },
      "population": {
        "type": "integer",
        "description": "Total population",
        "minimum": 1
      },
      "area_sq_km": {
        "type": "number",
        "description": "Area in square kilometers",
        "minimum": 0
      },
      "literacy_rate": {
        "type": "number",
        "description": "Literacy rate percentage",
        "minimum": 0,
        "maximum": 100
      },
      "official_languages": {
        "type": "array",
        "description": "List of official languages",
        "items": {
          "type": "string"
        },
        "minItems": 1
      }
    },
    "additionalProperties": false
  }
}
