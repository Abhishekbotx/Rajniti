# Rajniti Application Environment Variables
# Copy this file to .env and configure with your actual values

# Database Configuration (Required)
# For local PostgreSQL: postgresql://user:password@localhost:5432/rajniti
# For Supabase: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/rajniti

# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=True

# Database Options
DB_ECHO=false

# Perplexity AI (Optional - for search features)
# PERPLEXITY_API_KEY=your-perplexity-api-key-here
