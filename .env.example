# Backend Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# Security
SECRET_KEY=your-secure-secret-key-here

# Database Configuration
# Option 1: Use full database URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/rajniti

# Option 2: Use Supabase database URL
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Database logging (set to true to see SQL queries in logs)
DB_ECHO=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Perplexity AI API Configuration
PERPLEXITY_API_KEY=your-perplexity-api-key-here
